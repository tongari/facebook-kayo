<section class="signBox c-group -space-M u-text-center">
  <h1>Facebook-kayo?にログイン</h1>
  <%= alert %>
  <%= notice %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="c-group -space-S">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'パスワード' %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label 'ログインを記憶', for: :user_remember_me %>
          </div>
      <% end -%>
      <div class="actions">
        <%= f.submit 'ログイン' %>
      </div>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</section>

